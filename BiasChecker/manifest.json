{
    "manifest_version": 3,
    "name": "Bias Checker",
    "version": "1.0",
    "description": "Check for bias in text using an API.",
    "permissions": ["activeTab", "scripting", "storage"],
    "action": {
      "default_popup": "popup.html"
    },
    "background": {
      "service_worker": "background.js"
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content.js"]
      }
    ],
    "host_permissions": [
      "*://*/*"
    ]
  }
  